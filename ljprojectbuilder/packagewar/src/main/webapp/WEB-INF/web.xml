<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	<display-name>ljprojectbuilder</display-name>
	<module-name>ljprojectbuilder</module-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<mime-mapping>
		<extension>json</extension>
		<mime-type>application/json</mime-type>
	</mime-mapping>

	<!-- TODO check if protecting via security constraint is still necessary -->

	<filter>
		<filter-name>oauthLoginFilter</filter-name>
		<filter-class>de.starwit.ljprojectbuilder.auth.CheckTokenFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>oauthLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>	
</web-app>
